# Server
PORT=4444
NODE_ENV=development

# MongoDB Atlas
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>

# JWT Secrets â€” generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SECRET_OR_KEY=replace_with_a_long_random_string
SECRET_REFRESH_KEY=replace_with_a_different_long_random_string

# Email verification JWT secret (separate from nodemailer credentials)
EMAIL_SECRET=replace_with_another_long_random_string

# Nodemailer (Gmail)
NODEMAILER_USER=your@gmail.com
NODEMAILER_PASSWORD=your_gmail_app_password
NODEMAILER_SERVICE=gmail

# Frontend URL (used in verification email links)
CLIENT_URL=http://localhost:3000
